<!DOCTYPE html>
<html>
  <head>
    <title>Client</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
    <style>
      /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
      #map {
        height: 100%;
      }
      /* Optional: Makes the sample page fill the window. */
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
  <body>
    <div id="map"></div>
    <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 45.4956567, lng: -73.578844},
          zoom: 10
        });
        var clinics = <%-JSON.stringify(getAllClinics)%>; //Saves var from server
        var userId = <%-JSON.stringify(userId)%>;
        console.log(userId);
        clinics.forEach((clinic) => {
          var lat = clinic.lat;
          var long = clinic.long;
          var name = clinic.name;
          var address = clinic.address;
          var clicnicId = clinic._id;
          var m = new google.maps.Marker({
            position: {lat: lat, lng: long},
            map: map,
            name: name,
            address: address,
            clicnicId: clicnicId
          });
          popup(m, userId, clicnicId, name, address);
        })
        //addMarker(45.497115, -73.5886967, "Montreal General Hospital", "1650 Cedar Ave, Montreal, QC H3G 1A4", "5c4d181acffbde03984ec16f");
        //Add marker function
        function popup(marker, userId, clinicId, name, addr) {
          var infowindow = new google.maps.InfoWindow({
            content: '<b>' + name + '</b>'+ '</br>' + 
            addr + '</br>' + 
            'Click below to make an appointment: </br>' +
            '<form action="/appointment" method="post"> <input type = "hidden" name = "userId" value = "'+userId+'" /><input type = "hidden" name = "clinicId" value = "'+clinicId+'" /><input type="submit" value="Go"></input></form>'
            ,
          });
          marker.addListener('click', function() {
            infowindow.open(marker.get('map'), marker);
          });
        }
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBoPYseXDgfl7A831YzP6wQljr0yXA-3Pw&callback=initMap"
    async defer></script>
  </body>
</html>